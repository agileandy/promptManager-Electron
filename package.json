{
  "name": "promptmanager-electron",
  "version": "1.0.0",
  "description": "AI Prompt Manager",
  "main": "src/app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "build:setup": "node scripts/build-setup.js",
    "prebuild": "npm run build:setup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agileandy/promptManager-Electron.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/agileandy/promptManager-Electron/issues"
  },
  "homepage": "https://github.com/agileandy/promptManager-Electron#readme",
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^24.13.3",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  },
  "build": {
    "appId": "com.promptmanager.app",
    "productName": "AI Prompt Manager",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!src/**/*.test.js",
      "!src/**/test-*.js",
      "!**/*.md"
    ],
    "extraResources": [
      {
        "from": "src/app/db_viewer_template.html",
        "to": "db_viewer_template.html"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "agileandy",
      "repo": "promptManager-Electron"
    }
  }
}
